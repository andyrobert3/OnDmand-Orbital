<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
<nav class="navbar navbar-light bg-light">
	  <a class="navbar-brand" href="/">OnDmand</a>
	  <form class="form-inline"  action="/search" method="post">
	    <input id="search" class="form-control mr-sm-2" type="search" placeholder="Search Jobs" aria-label="Search">
		<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
		<a href="post">Post a Job</a>
	  </form>
		<i class="fas fa-user fa-2x ml-2"></i>
	</nav>

<div class="container-fluid">
	<div class="row">
		<div id="filter" class="col-2 border-right">
			<h4>Filters</h4>
		</div>
		<div id="result">
			<h4>Results for <strong>search-term</strong></h4>
				<table id="table" >
						<thead>
								<tr>
										<th>Job title</th>
										<th>Location</th>
										<th>Date</th>
										<th>Wage</th>
										<th>Description</th>
								</tr>
						</thead>
						 <tbody>
						 <% jobList.forEach(function (job) { %>
								<tr>
										<td><%= job.title %></td>
										<td><%= job.location %></td>
										<td><%= job.date %></td>
										<td><%= job.wage %></td>
										<td><%= job.description %></td>
								</tr>
						 <% }) %>
						 </tbody>
				</table>
		</div>
	</div>
</div>
